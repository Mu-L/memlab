{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noEmitOnError": true,
    "types": ["node", "jest"],
    "plugins": [
      {
        "name": "typescript-strict-plugin"
      }
    ],
    "paths": {
      "@memlab/core": ["./packages/core/src/"],
      "@memlab/e2e": ["./packages/e2e/src/"],
      "@memlab/api": ["./packages/api/src/"],
      "@memlab/cli": ["./packages/cli/src/"],
      "@memlab/heap-analysis": ["./packages/heap-analysis/src/"]
    }
  },
  "include": ["./src", "./packages/**/src", "./node_modules/@types/puppeteer/index.d.ts"],
  "exclude": ["./node_modules", "./packages/**/dist", "./dist"],
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/e2e" },
    { "path": "./packages/heap-analysis" },
    { "path": "./packages/api" },
    { "path": "./packages/cli" }
  ]
}
